              <%= link_to description_path(:mid => movie['imdbID'].to_s) do %>
              <%= image_tag (image_url(movie["Poster"])) ,class:"imageclass"  %>
              <% end %>


              <div class="carousel-caption">This is a caption </div>
            </div>
            <% end %>
          </div>

        </div>
        <% end %>

      </div>
      <div text-align="center">
      <a class="left carousel-control arrow" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      </div>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
